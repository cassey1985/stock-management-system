{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Servers",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev:all"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Backend",
			"type": "shell",
			"command": "npx",
			"args": [
				"ts-node",
				"src/index.ts"
			],
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}